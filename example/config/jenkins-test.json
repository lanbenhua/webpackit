{
  "project_dir_depth": 2,
  "project_name": "data",
  "module_name": "",
  "build": {
    "docker_image": {
      "base_image": "harbor.shopeemobile.com/shopee-fe/nodejs-base:2.0.0"
    },
    "commands": [
      "npm ci --registry=https://npm.garenanow.com/",
      "npm run test-build"
    ],
    "upload_static": {
      "static_dir": "./dist",
      "enable_cdn": false
    },
    "timeout": 1800
  },
  "deploy": {
    "idcs": {
      "live": {
        "sg": ["sg3"]
      },
      "staging": {
        "sg": ["sg2"]
      }
    },
    "instances": {
      "live": {
        "sg": 1
      }
    }
  }
}
